# Apagar los procesos del panel y eliminar la configuraci칩n:
  xfce4-panel --quit 
  pkill xfconfd 
  rm -rf ~/.config/xfce4/panel
  rm -rf ~/.config/xfce4/xfconf/xfce-perchannel-xml/xfce4-panel.xml
# Reiniciar el panel, que regenera la configuraci칩n default:
   xfce4-panel &

# Listar los par치metros configurables:
  xfconf-query -c xfce4-panel --list

# Dejar s칩lo el panel 1 (estilo Windows 10) y eliminar el panel 2 (estilo Windows 11):
  xfconf-query -c xfce4-panel -p /panels -t int -s 1 -a

  xfconf-query -c xfce4-panel -p /panels/dark-mode -s true
  xfconf-query -c xfce4-panel -p /panels/panel-1/autohide-behavior -s 2
  xfconf-query -c xfce4-panel -p /panels/panel-1/enter-opacity -s 70
  xfconf-query -c xfce4-panel -p /panels/panel-1/leave-opacity -s 70
  


# Reiniciar el panel:
  xfce4-panel -r
