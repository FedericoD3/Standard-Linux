ualq# ENTORNO

# Desactivar los defaults de terminales:
  mv ~/.bashrc ~/.bashrc.orig
  mv ~/.profile ~/.profile.orig
  sudo mv /etc/profile /etc/profile.orig
  sudo mv /etc/skel/.bashrc /etc/skel/.bashrc.orig
  sudo mv /etc/skel/.profile /etc/skel/.profile.orig
  sudo mv /etc/skel/.bash_logout /etc/skel/.bash_logout.orig
  sudo mv /etc/motd /etc/motd.orig

# Configurar que se cargue siempre la configuracion comun:
  sudo nano /etc/profile 
    #!/bin/bash
    # If not running interactively, don't do anything
    case $- in
      *i*) ;;
        *) return;;
    esac
    # Si bash se inicio interactivo (y no un script cron), cargar la configuracion standard
    # echo -e "\n######## EJECUTANDO /etc/profile"
    source /Discos/Local/bashStd/.bashrc
    return

# Crear el directorio para configuraci贸n standard de terminales:
  sudo mkdir -p /Discos/Local/bashStd/motd.d
# Descargar los archivos de configuraci贸n personalizada:
  wget --output-document=/Discos/Local/bashStd/.bashrc
  wget --output-document=/Discos/Local/bashStd/.bash_aliases
  wget --output-document=/Discos/Local/bashStd/FancyBash.sh





# Para determinar el apodo de la versi贸n del Debian:
  . /etc/os-release
  echo ${VERSION_CODENAME}









