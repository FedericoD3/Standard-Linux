ualq# ENTORNO

# Desactivar los defaults de terminales:
  mv ~/.bashrc ~/.bashrc.orig
  mv ~/.profile ~/.profile.orig
  sudo mv /etc/profile /etc/profile.orig
  sudo mv /etc/skel/.bashrc /etc/skel/.bashrc.orig
  sudo mv /etc/skel/.profile /etc/skel/.profile.orig
  sudo mv /etc/skel/.bash_logout /etc/skel/.bash_logout.orig
  sudo mv /etc/motd /etc/motd.orig

# Configurar que se cargue siempre la configuracion comun:
  sudo nano /etc/profile 
    #!/bin/bash
    # If not running interactively, don't do anything
    case $- in
      *i*) ;;
        *) return;;
    esac
    # Si bash se inicio interactivo (y no un script cron), cargar la configuracion standard
    # echo -e "\n######## EJECUTANDO /etc/profile"
    source /Discos/Local/bashStd/.bashrc
    return

# Crear el directorio para configuración standard de terminales:
  sudo mkdir -p /Discos/Local/bashStd/motd.d
# Descargar los archivos de configuración personalizada:
  wget --output-document=/Discos/Local/bashStd/.bashrc              https://tinyurl.com/4mz2cdn2
  wget --output-document=/Discos/Local/bashStd/.bash_aliases        https://tinyurl.com/2cycovkw
  wget --output-document=/Discos/Local/bashStd/FancyBash.sh         https://tinyurl.com/284jmpk2
  wget --output-document=/Discos/Local/bashStd/motd.d/10-bienvenida https://tinyurl.com/2xkkhpuk
  wget --output-document=/Discos/Local/bashStd/motd.d/30-updates    https://tinyurl.com/2a6h3elt
  wget --output-document=/Discos/Local/bashStd/motd.d/50-fsck       https://tinyurl.com/27zb44l3
  wget --output-document=/Discos/Local/bashStd/motd.d/60-reboot     https://tinyurl.com/276lkf2t
